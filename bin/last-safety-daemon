#!/bin/bash

PROG=$(basename ${0})

function usage() {
    echo "Usage:"
    echo "  ${PROG} start|stop|status"
}

if [ ${#} -ne 1 ]; then
    usage
    exit 1
fi

case ${1} in
    start)
      cd ~/python/WeatherSafety
      source venv/bin/activate
      python3 ${OPTIONS} ~/python/WeatherSafety/main.py
      ;;

    stop)
      pkill -f WeatherSafety/main.py
      ;;

    status)
      ;;

    *)
      usage
      exit 1
esac
